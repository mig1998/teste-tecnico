<!DOCTYPE html>
<html>

<head>
  <title>
    <%- title %>
  </title>


  <%- include('elements/bootstrap'); %>

    <style>
      form {
        background: rgba(128, 128, 128, 0.198);
      }
    </style>

</head>

<body>
  <header>
    <%- include('elements/head') %>
  </header>


  <h2 class="text-center mt-5">Envie um Comentário</h2>


  <form class="w-50 m-auto text-dark text-center" method="get" action="/comentar">

    <div class="mt-3">
      <label for="comentario" style="margin-top: 2%;">Comentario:</label>
      <textarea
        style=" border: none; display: block; margin: auto; height: 10em; resize: none; width: 80%; border-radius: 1em;"
        name="comentario" cols="40" maxlength="250" size="250" type="text" placeholder="coloque um comentario"
        id="comentario"></textarea>
    </div>


    <button type="submit" class="btn btn-primary m-3" onclick="check()">Enviar</button>
  </form>


  <!-- coments -->
  <div>
    <%- include('coments') %>
  </div>


</body>


<script>
  var id = "<%- id %>"

  function check() {
    window.location.reload();
    var comentario = document.getElementById('comentario').value


    if (id == "") {
      alert("cadastra-se primeiro!")
    } else if (comentario == "") {
      alert("você deixou o campo comentário vazio!")
    } else {
      alert("comentário salvo com sucesso!")
      window.location.reload();
    }
  }

</script>


<footer>
  <%- include('elements/footer') %>
</footer>


</html>